{$IFEND}

{$@DEFINE_HAVE_PORTAUDIO@ HavePortaudio}
{$IF Defined(HavePortaudio) and Defined(IncludeConstants)}
  PORTAUDIO_VERSION_MAJOR   = @portaudio_VERSION_MAJOR@;
