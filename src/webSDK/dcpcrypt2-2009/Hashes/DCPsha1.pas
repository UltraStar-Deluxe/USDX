unit DCPsha1;

interface
uses
  Classes, Sysutils, DCPcrypt2, DCPconst;

type
  TDCP_sha1= class(TDCP_hash)
  protected
    LenHi, LenLo: longword;
    Index: DWord;
    CurrentHash: array[0..4] of DWord;
    HashBuffer: array[0..63] of byte;
    procedure Compress;
  public
